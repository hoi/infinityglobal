<!-- Hero Section -->
<section class="relative bg-gradient-to-b from-blue-50 to-white overflow-hidden">
  <img src="https://images.unsplash.com/photo-1557683316-973673baf926?w=1920&q=80" alt="" class="absolute inset-0 w-full h-full object-cover opacity-10" loading="eager" />
