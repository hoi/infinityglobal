<% content_for :title, "Contact Us - Infinity Global" %>
<% content_for :description, "Get in touch with Infinity Global. Email contact@infinityglobalcorp.com to discuss your software engineering project needs." %>

<!-- Hero Section -->
<section class="bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto px-4 py-16 md:py-20 text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
      Get In Touch
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Ready to start your project? Let's talk. Send us an email to discuss your needs.
    </p>
  </div>
</section>

<div class="container mx-auto px-4 py-16">
  <div class="max-w-5xl mx-auto">
    <!-- Contact Methods Grid -->
    <div class="flex justify-center mb-16">
      <!-- Email -->
      <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 max-w-md w-full">
        <div class="flex items-center mb-4">
          <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <h2 class="text-xl font-bold text-gray-900">Email</h2>
        </div>
        <a href="mailto:contact@infinityglobalcorp.com"
           class="text-lg text-blue-600 hover:text-blue-700 font-semibold inline-block py-2 px-4 -mx-4 min-h-[44px] flex items-center break-all">
          contact@infinityglobalcorp.com
        </a>
        <p class="text-gray-600 text-sm mt-2">We respond within 24 hours</p>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-blue-50 rounded-xl p-8 md:p-12 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
        Prefer to email us directly?
      </h2>
      <p class="text-lg text-gray-700 mb-6 max-w-2xl mx-auto">
        Send us a message and we'll get back to you within one business day.
      </p>
      <a href="mailto:contact@infinityglobalcorp.com"
         class="bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 hover:scale-105 transition-all duration-150 inline-block shadow-lg min-h-[44px]">
        Send Email Now
      </a>
    </div>

  </div>
</div>
