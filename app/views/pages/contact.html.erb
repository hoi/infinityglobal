          <h2 class="text-xl font-bold text-gray-900">Phone</h2>
        </div>
        <a href="tel:+16174604451"
           class="text-lg text-blue-600 hover:text-blue-700 font-semibold inline-block py-2 px-4 -mx-4 min-h-[44px] flex items-center">
          +1 617-460-4451
        </a>
        <p class="text-gray-600 text-sm mt-2">Mon-Fri, 9am-5pm EST</p>
      </div>

      <!-- Email -->
      <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200">
        <div class="flex items-center mb-4">
          <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
