# Infinity Global - Environment Configuration
# Copy this file to .env and update with your values

# Application Port (unique port to avoid conflicts on shared VM)
# Choose a random port between 3000-9999
# Default: 3847 (should be unique per deployment)
PORT=3847

# Rails Environment
# Use 'production' for deployment, 'development' for local testing
RAILS_ENV=production

# Secret Key Base (REQUIRED for production)
# Generate with: docker-compose run --rm web bin/rails secret
# Or locally: bundle exec rails secret
# IMPORTANT: Never commit the actual secret to git!
SECRET_KEY_BASE=your_secret_key_here_generate_with_rails_secret

# Enable static file serving (required for Docker deployment)
RAILS_SERVE_STATIC_FILES=true

# Database (not used - static site only)
# This site is database-free. No DATABASE_URL needed.
# Rails will use sqlite3 in memory for asset precompilation only.

# Optional: Logging
# RAILS_LOG_LEVEL=info
# RAILS_LOG_TO_STDOUT=true

# Optional: Asset host (for CDN)
# ASSET_HOST=https://cdn.yourdomain.com

# Optional: Force specific domain (for host authorization)
# RAILS_HOST=infinityglobalcorp.com
