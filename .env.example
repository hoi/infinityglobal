# Infinity Global - Environment Configuration
# Copy this file to .env and update with your values

# Application Port (unique port to avoid conflicts on shared VM)
# Choose a random port between 3000-9999
PORT=3847

# Rails Environment
RAILS_ENV=production

# Secret Key Base (required for production)
# Generate with: docker-compose run --rm web bin/rails secret
# Or locally: bundle exec rails secret
SECRET_KEY_BASE=your_secret_key_here_generate_with_rails_secret

# Database (not used - static site only, but Rails may require for asset compilation)
# DATABASE_URL is not needed for this static site

# Optional: Enable detailed logs
# RAILS_LOG_LEVEL=debug
